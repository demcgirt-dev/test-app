<% if @user.errors.any? %>
  <div class="row" style="margin-bottom: 50px;">
    <div class="col-md-8 col-md-offset-2">
      <div class="jumbotron error-msg">
        <h3>The following errors prevented this user from being created:</h3>
      
        <% @user.errors.full_messages.each do |msg| %>
          <ul style="text-align: left;">
            <li style="padding: 5px;">
              <span style="padding: 5px;" class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <%= msg %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-10 col-md-offset-1">
    
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        
        <div class ="control-label col-md-2">
          <%= f.label :username %><br/>
        </div>
        
        <div class="col-md-6">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true  %>
        </div>
        
      </div>
      
      <div class="form-group">
        
        <div class ="control-label col-md-2">
          <%= f.label :email %><br/>
        </div>
        
        <div class="col-md-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
        
      </div>
      
      <div class="form-group">
        
        <div class ="control-label col-md-2">
          <%= f.label :password %><br/>
        </div>
        
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
        </div>
        
      </div>
      
      <div class="form-group">
        
        <div class="col-md-offset-2 col-md-2">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary") %>
        </div>
        
      </div>
      
    <% end %>
    </div>
    
    <div class="col-md-offset-4 col-md-3">
      <span class="glyphicon glyphicon-user" aria-hidden="true" style="padding: 10px;"></span> 
      <%= link_to "Return to User Login", login_path %>
    </div>
    
  </div>
</div>