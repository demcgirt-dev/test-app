<% if @article.errors.any? %>
  <h2>The following errors prevented article from being created.</h2>
    
  <% @article.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
    
<% end %>

<div class="row">
  <div class="col-md-12">
  
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        
        <div class ="control-label col-md-2">
          <%= f.label :title %><br/>
        </div>
        
        <div class="col-md-6">
          <%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true  %>
        </div>
        
      </div>
      
      <div class="form-group">
        
        <div class ="control-label col-md-2">
          <%= f.label :description %><br/>
        </div>
        
        <div class="col-md-6">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article Content" %>
        </div>
        
      </div>
      
      <div class="form-group">
        
        <div class="col-md-offset-2 col-md-2">
          <%= f.submit class: "btn btn-primary" %>
        </div>
        
      </div>
      
    <% end %>
    
    <div class="col-md-offset-4 col-md-3">
      <%= link_to "[ Return to articles listing ]", articles_path %>
    </div>
    
  </div>
</div>
  

